<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <data class="LetterAdapterDataBinding">
        <variable
            name="letter"
            type="estudio_sol.zig_zag_crossword_puzzle.model.Label"/>
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/label_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/element_half_little_margin"
                android:layout_marginLeft="@dimen/element_half_margin"
                android:layout_marginRight="@dimen/element_half_margin"
                android:layout_marginBottom="@dimen/element_half_little_margin"
                android:layout_centerVertical="true"
                android:text="A"
                tools:text="A"/>

        </LinearLayout>
    </RelativeLayout>
</layout>